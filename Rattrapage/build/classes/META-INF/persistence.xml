<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Rattrapage"
	transaction-type="JTA">
		<jta-data-source>java:/dsRattrapage</jta-data-source>
		<class>entities.Client</class>
		<class>entities.Fournisseur</class>
		<class>entities.Cadeau</class>
		<class>entities.Adresse</class>
		<class>entities.Commande</class>
		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="drop-and-create" />
		</properties>
	</persistence-unit>
</persistence>
